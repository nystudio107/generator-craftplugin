{
    "API_NAME": "Version 3.0.x",
    "API_KEY": "api_version_3_0",
    "QUESTIONS": [
        {
            "type": "input",
            "name": "pluginName",
            "message": "Plugin name:",
            "default": "Generic"
        },
        {
            "type": "input",
            "name": "pluginDescription",
            "message": "Short description of the plugin:",
            "default": "This is a generic Craft CMS plugin"
        },
        {
            "type": "input",
            "name": "pluginVersion",
            "message": "Plugin initial version:",
            "default": "1.0.0",
            "store": true
        },
        {
            "type": "input",
            "name": "pluginAuthorName",
            "message": "Plugin author name:",
            "default": "John Doe",
            "store": true
        },
        {
            "type": "input",
            "name": "pluginVendorName",
            "message": "Plugin vendor name:",
            "default": "Doe Enterprises",
            "store": true
        },
        {
            "type": "input",
            "name": "pluginAuthorUrl",
            "message": "Plugin author URL:",
            "default": "http://DoeDesign.com/",
            "store": true
        },
        {
            "type": "input",
            "name": "pluginAuthorGithub",
            "message": "Plugin author GitHub.com name:",
            "store": true
        },
        {
            "type": "checkbox",
            "name": "codeComments",
            "message": "Should there be code comments generated:",
            "choices": [
                {
                    "key": "codeComments",
                    "name": "Code Comments",
                    "value": "codeComments",
                    "checked": true
                }
            ]
        },
        {
            "type": "checkbox",
            "name": "pluginComponents",
            "message": "Select what components your plugin will have:",
            "choices": [
                {
                    "key": "consolecommands",
                    "name": "ConsoleCommands",
                    "value": "consolecommands"
                },
                {
                    "key": "controllers",
                    "name": "Controllers",
                    "value": "controllers"
                },
                {
                    "key": "elementtypes",
                    "name": "ElementTypes",
                    "value": "elementtypes"
                },
                {
                    "key": "fieldtypes",
                    "name": "FieldTypes",
                    "value": "fieldtypes"
                },
                {
                    "key": "models",
                    "name": "Models",
                    "value": "models"
                },
                {
                    "key": "purchasables",
                    "name": "Purchasables",
                    "value": "purchasables"
                },
                {
                    "key": "records",
                    "name": "Records",
                    "value": "records"
                },
                {
                    "key": "services",
                    "name": "Services",
                    "value": "services"
                },
                {
                    "key": "settings",
                    "name": "Settings",
                    "value": "settings"
                },
                {
                    "key": "tasks",
                    "name": "Tasks",
                    "value": "tasks"
                },
                {
                    "key": "twigextensions",
                    "name": "TwigExtensions",
                    "value": "twigextensions"
                },
                {
                    "key": "utilities",
                    "name": "Utilities",
                    "value": "utilities"
                },
                {
                    "key": "variables",
                    "name": "Variables",
                    "value": "variables"
                },
                {
                    "key": "widgets",
                    "name": "Wigets",
                    "value": "widgets"
                }
            ],
            "store": true
        },
        {
            "when": "consolecommands",
            "type": "input",
            "name": "consolecommandName",
            "message": "Name of your ConsoleCommand:",
            "default": "",
            "store": false
        },
        {
            "when": "controllers",
            "type": "input",
            "name": "controllerName",
            "message": "Name of your Controller:",
            "default": "",
            "store": false
        },
        {
            "when": "elementtypes",
            "type": "input",
            "name": "elementName",
            "message": "Name of your Element:",
            "default": "",
            "store": false
        },
        {
            "when": "fieldtypes",
            "type": "input",
            "name": "fieldName",
            "message": "Name of your Field:",
            "default": "",
            "store": false
        },
        {
            "when": "models",
            "type": "input",
            "name": "modelName",
            "message": "Name of your Model:",
            "default": "",
            "store": false
        },
        {
            "when": "purchasables",
            "type": "input",
            "name": "purchasableName",
            "message": "Name of your Purchasable:",
            "default": "",
            "store": false
        },
        {
            "when": "records",
            "type": "input",
            "name": "recordName",
            "message": "Name of your Record:",
            "default": "",
            "store": false
        },
        {
            "when": "services",
            "type": "input",
            "name": "serviceName",
            "message": "Name of your Service:",
            "default": "",
            "store": false
        },
        {
            "when": "tasks",
            "type": "input",
            "name": "taskName",
            "message": "Name of your Task:",
            "default": "",
            "store": false
        },
        {
            "when": "utilities",
            "type": "input",
            "name": "utilityName",
            "message": "Name of your Utility:",
            "default": "",
            "store": false
        },
        {
            "when": "widgets",
            "type": "input",
            "name": "widgetName",
            "message": "Name of your Widget:",
            "default": "",
            "store": false
        }
    ],
    "TEMPLATE_FILES": [
        {
            "src": "src/_Plugin.php",
            "destDir": "src/",
            "dest": ".php",
            "prefix": true
        },
        {
            "src": "src/models/_Settings.php",
            "destDir": "src/models/",
            "dest": "Settings.php",
            "requires": ["settings"],
            "prefix": false
        },
        {
            "src": "_README.md",
            "destDir": "",
            "dest": "README.md",
            "prefix": false
        },
        {
            "src": "_CHANGELOG.md",
            "destDir": "",
            "dest": "CHANGELOG.md",
            "prefix": false
